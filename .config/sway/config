# Read `man 5 sway` for a complete reference.

### Variables
#
# Logo key. Use Mod1 for Alt.
set $mod Mod4
# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l
# Your preferred terminal emulator
set $term termite
# Your preferred application launcher
# Note: pass the final command to swaymsg so that the resulting window can be opened
# on the original workspace that the command was run on.
set $menu '~/.scripts/mutex_run.sh "dmenu_path | rofi -show run"'

### Output configuration
output * bg ~/img/langtang-valley-with-lakes.jpg fill

font C059 Medium 14

### Key bindings - Default Device
#
# Basics:
#
    # Start a terminal
    bindsym $mod+Shift+Return exec $term

    # Kill focused window
    bindsym $mod+Shift+q kill

    # Start your launcher
    bindsym $mod+Return exec $menu
    bindsym F9 exec $menu
 
    # Drag floating windows by holding down $mod and left mouse button.
    # Resize them with right mouse button + $mod.
    # Despite the name, also works for non-floating windows.
    # Change normal to inverse to use left mouse button for resizing and right
    # mouse button for dragging.
    floating_modifier $mod normal

    # Reload the configuration file
    bindsym $mod+Shift+c reload

    bindsym $mod+Shift+s exec grim -g "$(slurp -d)" - | wl-copy -t image/png

    # Exit sway (logs you out of your Wayland session)
    bindsym $mod+Shift+e exec swaymsg exit
#
# Moving around:
#
    # Move your focus around
    bindsym $mod+$left focus left
    bindsym $mod+$down focus down
    bindsym $mod+$up focus up
    bindsym $mod+$right focus right
    # Or use $mod+[up|down|left|right]
    bindsym $mod+Left focus left
    bindsym $mod+Down focus down
    bindsym $mod+Up focus up
    bindsym $mod+Right focus right
    # Or use $mod+tab
    bindsym $mod+Tab focus right
    bindsym $mod+Shift+Tab focus left

    # Move the focused window with the same, but add Shift
    bindsym $mod+Shift+$left move left
    bindsym $mod+Shift+$down move down
    bindsym $mod+Shift+$up move up
    bindsym $mod+Shift+$right move right
    # Ditto, with arrow keys
    bindsym $mod+Shift+Left move left
    bindsym $mod+Shift+Down move down
    bindsym $mod+Shift+Up move up
    bindsym $mod+Shift+Right move right
#
# Workspaces:
#
    # Switch to workspace
    bindsym $mod+1 workspace number 1
    bindsym $mod+2 workspace number 2
    bindsym $mod+3 workspace number 3
    bindsym $mod+4 workspace number 4
    bindsym $mod+5 workspace number 5
    bindsym $mod+6 workspace number 6
    bindsym $mod+7 workspace number 7
    bindsym $mod+8 workspace number 8
    bindsym $mod+9 workspace number 9
    bindsym $mod+0 workspace number 10
    # Move focused container to workspace
    bindsym $mod+Shift+1 move container to workspace number 1
    bindsym $mod+Shift+2 move container to workspace number 2
    bindsym $mod+Shift+3 move container to workspace number 3
    bindsym $mod+Shift+4 move container to workspace number 4
    bindsym $mod+Shift+5 move container to workspace number 5
    bindsym $mod+Shift+6 move container to workspace number 6
    bindsym $mod+Shift+7 move container to workspace number 7
    bindsym $mod+Shift+8 move container to workspace number 8
    bindsym $mod+Shift+9 move container to workspace number 9
    bindsym $mod+Shift+0 move container to workspace number 10
    # Note: workspaces can have any name you want, not just numbers.
    # We just use 1-10 as the default.
#
# Layout stuff:
#
    # You can "split" the current object of your focus with
    # $mod+b or $mod+v, for horizontal and vertical splits
    # respectively.
    bindsym $mod+b splith
    bindsym $mod+v splitv

    # Switch the current container between different layout styles
    bindsym $mod+s layout stacking
    bindsym $mod+w layout tabbed
    bindsym $mod+e layout toggle split

    # Make the current focus fullscreen
    bindsym $mod+f fullscreen

    # Toggle the currently focused window between tiling and floating mode
    bindsym $mod+Shift+space floating toggle

    # Swap focus between the tiling area and the floating area
    bindsym $mod+space focus mode_toggle

    # Move focus to the parent container
    bindsym $mod+a focus parent
    bindsym $mod+Shift+a focus child
#
# Scratchpad:
#
    # Sway has a "scratchpad", which is a bag of holding for windows.
    # You can send windows there and get them back later.

    # Move the currently focused window to the scratchpad
    bindsym $mod+Shift+minus move scratchpad

    # Show the next scratchpad window or hide the focused scratchpad window.
    # If there are multiple scratchpad windows, this command cycles through them.
    bindsym $mod+minus scratchpad show
#
# Resizing containers:
#
mode "resize" {
    # left will shrink the containers width
    # right will grow the containers width
    # up will shrink the containers height
    # down will grow the containers height
    bindsym $left resize shrink width 10px
    bindsym $down resize grow height 10px
    bindsym $up resize shrink height 10px
    bindsym $right resize grow width 10px

    # Ditto, with arrow keys
    bindsym Left resize shrink width 10px
    bindsym Down resize grow height 10px
    bindsym Up resize shrink height 10px
    bindsym Right resize grow width 10px

    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

#
# Brightness and Volume
#
bindsym XF86MonBrightnessUp exec (xbacklight -inc 5 && echo $(xbacklight -get) >> /tmp/xobpipe)
bindsym XF86MonBrightnessDown exec (xbacklight -dec 5 && echo $(xbacklight -get) >> /tmp/xobpipe)
bindsym XF86AudioRaiseVolume exec (ponymix unmute && ponymix increase 10 && echo $(ponymix get-volume) >> /tmp/xobpipe)
bindsym XF86AudioLowerVolume exec (ponymix unmute && ponymix decrease 10 && echo $(ponymix get-volume) >> /tmp/xobpipe)
bindsym XF86AudioMute exec ~/.scripts/toggle-mute.sh

#
# Notifications:
#
bindsym $mod+BackSpace exec makoctl dismiss
bindsym $mod+Shift+BackSpace exec makoctl dismiss --all

### Key bindings - Keychron K4
set $kcmod Mod1
set $kcid 1452:591:Keychron_K4_Keyboard
#
# Basics:
#
    bindsym --input-device=$kcid $kcmod+Shift+Return exec $term
    bindsym --input-device=$kcid $kcmod+Shift+q kill
    bindsym --input-device=$kcid $kcmod+Return exec $menu
    bindsym --input-device=$kcid F9 exec $menu
    floating_modifier $kcmod normal
    bindsym --input-device=$kcid $kcmod+Shift+c reload
    bindsym --input-device=$kcid $kcmod+Shift+s exec grim -g "$(slurp -d)" - | wl-copy -t image/png
    bindsym --input-device=$kcid $kcmod+Shift+e exec swaymsg exit
#
# Moving around:
#
    bindsym --input-device=$kcid $kcmod+$left focus left
    bindsym --input-device=$kcid $kcmod+$down focus down
    bindsym --input-device=$kcid $kcmod+$up focus up
    bindsym --input-device=$kcid $kcmod+$right focus right
    bindsym --input-device=$kcid $kcmod+Left focus left
    bindsym --input-device=$kcid $kcmod+Down focus down
    bindsym --input-device=$kcid $kcmod+Up focus up
    bindsym --input-device=$kcid $kcmod+Right focus right
    bindsym --input-device=$kcid $kcmod+Tab focus right
    bindsym --input-device=$kcid $kcmod+Shift+Tab focus left
    bindsym --input-device=$kcid $kcmod+Shift+$left move left
    bindsym --input-device=$kcid $kcmod+Shift+$down move down
    bindsym --input-device=$kcid $kcmod+Shift+$up move up
    bindsym --input-device=$kcid $kcmod+Shift+$right move right
    bindsym --input-device=$kcid $kcmod+Shift+Left move left
    bindsym --input-device=$kcid $kcmod+Shift+Down move down
    bindsym --input-device=$kcid $kcmod+Shift+Up move up
    bindsym --input-device=$kcid $kcmod+Shift+Right move right
#
# Workspaces:
#
    bindsym --input-device=$kcid $kcmod+1 workspace number 1
    bindsym --input-device=$kcid $kcmod+2 workspace number 2
    bindsym --input-device=$kcid $kcmod+3 workspace number 3
    bindsym --input-device=$kcid $kcmod+4 workspace number 4
    bindsym --input-device=$kcid $kcmod+5 workspace number 5
    bindsym --input-device=$kcid $kcmod+6 workspace number 6
    bindsym --input-device=$kcid $kcmod+7 workspace number 7
    bindsym --input-device=$kcid $kcmod+8 workspace number 8
    bindsym --input-device=$kcid $kcmod+9 workspace number 9
    bindsym --input-device=$kcid $kcmod+0 workspace number 10
    bindsym --input-device=$kcid $kcmod+Shift+1 move container to workspace number 1
    bindsym --input-device=$kcid $kcmod+Shift+2 move container to workspace number 2
    bindsym --input-device=$kcid $kcmod+Shift+3 move container to workspace number 3
    bindsym --input-device=$kcid $kcmod+Shift+4 move container to workspace number 4
    bindsym --input-device=$kcid $kcmod+Shift+5 move container to workspace number 5
    bindsym --input-device=$kcid $kcmod+Shift+6 move container to workspace number 6
    bindsym --input-device=$kcid $kcmod+Shift+7 move container to workspace number 7
    bindsym --input-device=$kcid $kcmod+Shift+8 move container to workspace number 8
    bindsym --input-device=$kcid $kcmod+Shift+9 move container to workspace number 9
    bindsym --input-device=$kcid $kcmod+Shift+0 move container to workspace number 10
#
# Layout stuff:
#
    bindsym --input-device=$kcid $kcmod+b splith
    bindsym --input-device=$kcid $kcmod+v splitv
    bindsym --input-device=$kcid $kcmod+s layout stacking
    bindsym --input-device=$kcid $kcmod+w layout tabbed
    bindsym --input-device=$kcid $kcmod+e layout toggle split
    bindsym --input-device=$kcid $kcmod+f fullscreen
    bindsym --input-device=$kcid $kcmod+Shift+space floating toggle
    bindsym --input-device=$kcid $kcmod+space focus kcmode_toggle
    bindsym --input-device=$kcid $kcmod+a focus parent
    bindsym --input-device=$kcid $kcmod+Shift+a focus child
#
# Scratchpad:
#
    bindsym --input-device=$kcid $kcmod+Shift+minus move scratchpad
    bindsym --input-device=$kcid $kcmod+minus scratchpad show
#
# Resizing containers:
#
    bindsym --input-device=$kcid $kcmod+r kcmode "resize"
#
# Brightness and Volume
#
    bindsym --input-device=$kcid XF86MonBrightnessUp exec (xbacklight -inc 5 && echo $(xbacklight -get) >> /tmp/xobpipe)
    bindsym --input-device=$kcid XF86MonBrightnessDown exec (xbacklight -dec 5 && echo $(xbacklight -get) >> /tmp/xobpipe)
    bindsym --input-device=$kcid XF86AudioRaiseVolume exec (ponymix unmute && ponymix increase 10 && echo $(ponymix get-volume) >> /tmp/xobpipe)
    bindsym --input-device=$kcid XF86AudioLowerVolume exec (ponymix unmute && ponymix decrease 10 && echo $(ponymix get-volume) >> /tmp/xobpipe)
    bindsym --input-device=$kcid XF86AudioMute exec ~/.scripts/toggle-mute.sh

#
# Notifications:
#
    bindsym --input-device=$kcid $kcmod+BackSpace exec makoctl dismiss
    bindsym --input-device=$kcid $kcmod+Shift+BackSpace exec makoctl dismiss --all
### END Keychron Specific hotkeys

#
# Status Bar:
#
# Read `man 5 sway-bar` for more information about this section.
bar {
    position top

    # When the status_command prints a new line to stdout, swaybar updates.
    # The default just shows the current date and time.
    status_command py3status -c ~/.config/i3status/config --wm sway

    colors {
        statusline #ffffff
        background #323232
        inactive_workspace #32323200 #32323200 #5c5c5c
    }
}

include /etc/sway/config.d/*

exec ~/.scripts/start_xob.sh


#
# Lock Screen
#
bindsym $mod+End exec ~/.scripts/lock.sh

#
# Touchpad Config
#
set $touchpad 1739:30383:DELL07E6:00_06CB:76AF_Touchpad

input $touchpad {
   tap enabled
   middle_emulation enabled
}
